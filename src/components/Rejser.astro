---
import RejseCard from "../components/RejseCard.astro";
import Heading from "../components/Heading.astro";
import rejse1 from "../assets/images/rejse1.webp";
import rejse2 from "../assets/images/rejse2.webp";
import rejse3 from "../assets/images/rejse3.webp";
import rejse4 from "../assets/images/rejse4.webp";
import rejse5 from "../assets/images/rejse5.webp";
import rejse6 from "../assets/images/rejse6.webp";
import rejse7 from "../assets/images/rejse7.webp";
import rejse8 from "../assets/images/rejse8.webp";
import rejse9 from "../assets/images/rejse9.webp";
---

<section class="mt-25">
  <div class="container mx-auto p-7 md:p-4">
    <Heading htmlheading="h2" size="large">HØJSKOLE I UDLANDET <br /> – VÆLG DIT EVENTYR!</Heading>
  </div>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-5 bg-cover bg-center" style="background-image: url('/bg-white.jpg');">
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse1} destinationer={"Brasilien <br/> Colombia <br/> Costa Rica <br/> Mexico"} />
    <RejseCard stylingclasses={"parallaxelement"} font={"font-heading"} src={rejse2} destinationer={"Maldiverne <br/> Sri Lanka <br/> Japan <br/> Australien <br/> Bali <br/> Gili Islands"} />
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse3} destinationer={"australien <br/> new zealand <br/> vietnam <br/> bali <br/> gili islands <br/> lombok"} />
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse4} destinationer={"hawaii <br/> australien <br/> japan <br/> gili islands <br/> bali"} />
    <RejseCard stylingclasses={"parallaxelement"} font={"font-heading"} src={rejse5} destinationer={"maldiverne <br/> sri lanka <br/> bali <br/> gili islands"} />
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse6} destinationer={"brasilien <br/> bolivia <br/> colombia <br/> ecuador <br/> peru <br/> argentina"} />
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse7} destinationer={"australien <br/> japan <br/> bali <br/> gili islands"} />
    <RejseCard stylingclasses={"parallaxelement"} font={"font-heading"} src={rejse8} destinationer={"indien <br/> nepal <br/> thailand <br/> vietnam <br/> sri lanka"} />
    <RejseCard stylingclasses={"parallaxelementmodsat"} font={"font-heading"} src={rejse9} destinationer={"bali <br/> lombok <br/> gili islands"} />
  </div>
</section>

<script>
  /* Import af Motion One bibliotek */
  import { animate, stagger, inView, scroll } from "motion";

  /* Parallax med tekstboks */
  scroll(animate(".parallaxelement", { y: [50, 250] }), {
    target: document.querySelector(".parallaxelement"),
    offset: ["start end", "end start"], // gør bevægelsen mere strakt og rolig
  });

  scroll(animate(".parallaxelementmodsat", { y: [250, 50] }), {
    target: document.querySelector(".parallaxelementmodsat"),
    offset: ["start end", "end start"], // gør bevægelsen mere strakt og rolig
  });
</script>
